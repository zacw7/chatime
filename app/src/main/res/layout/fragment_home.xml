<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".presentation.ui.fragments.HomeFragment">

  <EditText
    android:id="@+id/field_chat_key"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="48dp"
    android:layout_marginStart="48dp"
    android:layout_marginEnd="48dp"
    android:ems="10"
    android:hint="@string/hint_chat_key"
    android:inputType="textPersonName"
    android:textAlignment="center"
    app:layout_constraintBottom_toTopOf="@+id/button_start_chat"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.6" />
  <Button
    android:id="@+id/button_start_chat"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="64dp"
    android:layout_marginStart="96dp"
    android:layout_marginEnd="96dp"
    android:elevation="10dp"
    android:text="Let's Chat"
    app:layout_constraintBottom_toTopOf="@+id/divider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent" />
  <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.4" />
  <Button
    android:id="@+id/button_pick"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="96dp"
    android:layout_marginEnd="96dp"
    android:text="@string/pick_a_bottle"
    app:layout_constraintBottom_toTopOf="@+id/button_throw"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
  <Button
    android:id="@+id/button_throw"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    android:layout_marginStart="96dp"
    android:layout_marginEnd="96dp"
    android:text="@string/throw_a_bottle"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>